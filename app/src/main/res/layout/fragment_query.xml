<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:orientation="vertical">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="20dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:showDividers="middle">
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:alpha="0.5"
                        android:background="@color/colorGreyHint" />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="38dp"
                        android:id="@+id/query_idEdit"
                        android:textColor="@color/text_color_Black"
                        android:hint="请输入账号"
                        android:textColorHint="@color/colorGreyHint"
                        android:inputType="number"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:drawablePadding="10dp"
                        android:background="@color/text_color_or_bg_White_lucency"
                        android:drawableLeft="@drawable/ic_login_id_white"/>
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:alpha="0.5"
                        android:background="@color/colorGreyHint" />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="38dp"
                        android:id="@+id/query_pswEdit"
                        android:hint="请输入密码"
                        android:textColorHint="@color/colorGreyHint"
                        android:inputType="textPassword"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:drawablePadding="10dp"
                        android:textColor="@color/text_color_Black"
                        android:background="@color/text_color_or_bg_White_lucency"
                        android:drawableLeft="@drawable/ic_login_psw_white"/>
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:alpha="0.5"
                        android:background="@color/colorGreyHint" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="四六级密码为名字"
                            android:textColor="@color/button_text_color_gray"
                            android:paddingStart="10dp"
                            android:paddingEnd="0dp"/>
                        <Space
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"/>
                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/query_showPswCheckBox"
                            android:text="@string/showPsw"
                            android:textColor="@color/text_color_Black"
                            android:paddingEnd="10dp"
                            android:paddingStart="0dp"
                            style="@style/Base.Widget.AppCompat.CompoundButton.CheckBox"
                            />
                    </LinearLayout>

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="30dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <Space
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableTop="@drawable/ic_query_cet"
                            android:drawablePadding="2dp"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:id="@+id/query_cet"
                            android:text="CET成绩"/>
                        <Space
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableTop="@drawable/ic_query_grade"
                            android:drawablePadding="2dp"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:id="@+id/query_cj"
                            android:text="考试成绩"/>
                        <Space
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableTop="@drawable/ic_query_exam"
                            android:drawablePadding="2dp"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:id="@+id/query_exam"
                            android:text="考试安排"/>
                        <Space
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"/>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>
    </LinearLayout>

</RelativeLayout>